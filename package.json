{
    "name": "core-mvc",
    "version": "0.0.4",
    "description": "Simple but powerful MVC framework for NodeJS.",
    "main": "index.js",
    "scripts": {
        "build": "tsc",
        "test": "cspell \"**/*\" --no-progress",
        "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
        "prepare": "husky install",
        "postversion": "git push --tags && git push"
    },
    "devDependencies": {
        "cspell": "^5.13.0",
        "graphql": "^15.7.2",
        "husky": "^7.0.4",
        "prettier": "^2.4.1",
        "typescript": "^4.4.4"
    },
    "peerDependencies": {
        "inversify": "^6.0.1",
        "inversify-binding-decorators": "^4.0.0",
        "reflect-metadata": "^0.1.13"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "printWidth": 80,
        "singleQuote": true,
        "arrowParens": "avoid"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/istvan-xyz/core-mvc.git"
    },
    "keywords": [
        "mvc",
        "framework",
        "di",
        "express",
        "graphql"
    ],
    "author": "Istv√°n Antal <istvan@antal.xyz>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/istvan-xyz/core-mvc/issues"
    },
    "homepage": "https://github.com/istvan-xyz/core-mvc#readme",
    "optionalDependencies": {
        "apollo-server-core": "^3.5.0"
    }
}
